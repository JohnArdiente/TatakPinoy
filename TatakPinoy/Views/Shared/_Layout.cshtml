@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
<link href="~/portfolio_boostrap/img/Tatakpinoycargo.jpg" rel="icon">
<link href="~/portfolio_boostrap/img/Tatakpinoycargo.jpg" rel="apple-touch-icon">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/portfolio_boostrap/css/styles.css" rel="stylesheet">




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TatakPinoyCargo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="assets/css/style.css" rel="stylesheet">
</head>
<body>
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">
            <img src="~/portfolio_boostrap/img/Tatakpinoycargo.jpg" alt="Alternate Text" width="80" height="80" /><h1 class="logo me-auto"></h1>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li><a class="nav-link scrollto active" asp-controller="Administration" asp-action="Index">Home</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Shipments</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                            <ul>
                                <li><a class="dropdown-item" asp-controller="Shipments" asp-action="Create">New Shipment</a></li>
                                <li><a class="dropdown-item" asp-controller="Shipments" asp-action="Update">Update Shipment</a></li>
                                <li><a class="dropdown-item" asp-controller="Consignees" asp-action="Update">Update Tracking</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#"><span>Master Data</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                            <ul>
                                <li><a class="dropdown-item" asp-controller="Status" asp-action="Index">Shipment Status</a></li>
                                <li><a class="dropdown-item" asp-controller="ConsigneeStatus" asp-action="Index">Tracking Status</a></li>
                            </ul>
                        </li>
                        <li><a class="nav-link scrollto" asp-controller="Messages" asp-action="Index">Messages</a></li>
                        <li><a class="nav-link scrollto" asp-controller="Reports" asp-action="Index">Reports</a></li>
                        //@if (SignInManager.IsSignedIn(User)@* && User.IsInRole("Admin")*@)
                        //{
                        <li class="dropdown">
                            <a href="#"><span>Manage</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                            <ul>
                                <li>
                                    <a class="dropdown-item" asp-controller="Administration" asp-action="ListUsers">Users</a>
                                </li>
                                <li><a class="dropdown-item" asp-controller="Administration" asp-action="ListRoles">Roles</a></li>
                            </ul>
                        </li>
                        //}

                        <li class="dropdown">
                            <a href="#"><span>@User.Identity.Name</span> <i class="bi bi-chevron-down dropdown-indicator"></i></a>
                            <ul>
                                <li>
                                    <form method="post" asp-controller="account" asp-action="logout" id="logout-form">
                                        <a class="nav-link scrollto" onclick="document.getElementById('logout-form').submit();">Logout</a>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a class="nav-link scrollto" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="nav-link scrollto " href="#about">About Us</a></li>
                        <li><a class="nav-link scrollto" href="#services">Services</a></li>
                        <li><a class="nav-link scrollto" href="#contact">Contact Us</a></li>
                        <li class="nav-link scrollto">
                            <a class="nav-link" asp-controller="account" asp-action="login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div>
        <main role="main" class="pb-3">
            <br />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TatakPinoy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


<!-- Vendor JS Files -->
<script src="~/portfolio_boostrap/vendor/purecounter/purecounter_vanilla.js"></script>
<script src="~/portfolio_boostrap/vendor/aos/aos.js"></script>
<script src="~/portfolio_boostrap/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/portfolio_boostrap/vendor/glightbox/js/glightbox.min.js"></script>
<script src="~/portfolio_boostrap/vendor/isotope-layout/isotope.pkgd.min.js"></script>
<script src="~/portfolio_boostrap/vendor/swiper/swiper-bundle.min.js"></script>
<script src="~/portfolio_boostrap/vendor/php-email-form/validate.js"></script>

<!-- Template Main JS File -->
<script src="~/portfolio_boostrap/js/main.js"></script>
