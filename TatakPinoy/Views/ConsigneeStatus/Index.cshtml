@model IEnumerable<TatakPinoy.Models.ConsigneeStatus>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                   Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConsigneeStatusDesc) 
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-sm btn-outline-primary" asp-route-id="@item.Id">Edit</a>

                        <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete","ConsigneeStatus", new { id = @item.Id })" onclick="return confirm('Do you want to delete this Status?');" )">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>