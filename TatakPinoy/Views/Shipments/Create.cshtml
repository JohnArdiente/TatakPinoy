@model TatakPinoy.Models.Shipment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h4>Create new Shipment</h4>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ShipmentNo" class="control-label"> Shipment Number: </label>
                        <input asp-for="ShipmentNo" class="form-control" />
                        <span asp-validation-for="ShipmentNo" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                        <a class="btn btn-outline-success" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>


        </div>

        <div>

        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
