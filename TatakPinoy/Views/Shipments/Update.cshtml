@model List<TatakPinoy.Models.Shipment>

@{
    ViewData["Title"] = "Index";

}

<div class="container">
    <br />
    <form asp-controller="Shipments" asp-action="Index" id="search_form" method="get">
        <div class="col-md-6">  <input class="form-control" type="text" name="SearchString" placeholder="Search" aria-label="Search"></div>
        <br />
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Filter">Search</button>&nbsp;<button class="btn btn-outline-success my-2 my-sm-0" type="button" onclick="viewAllClicked();">View All</button>
    </form>   
</div>
<script>
function viewAllClicked() {
  $('#search').val('');
  $('#search_form').submit();
}
</script>
<style>
    .container-fluid {
        width: 100%;
    }
</style>
