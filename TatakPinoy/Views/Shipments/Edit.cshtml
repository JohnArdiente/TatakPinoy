@model TatakPinoy.Models.Shipment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Update Shipment</h4>
<br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ShipmentId" />
                <div class="form-group">
                    <label class="control-label">Shipment Number</label>
                    <input asp-for="ShipmentNo" class="form-control" />
                    <span asp-validation-for="ShipmentNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select class="form-control select2" asp-for="StatusId" asp-items="ViewBag.StatusId " id="ddlBranches" , onchange="return get_sbu(this)"> </select>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                    <a class="btn btn-outline-success" asp-action="Index">Back to List</a>

                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
