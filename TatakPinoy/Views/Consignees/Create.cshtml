@model TatakPinoy.Models.Consignee

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h4>New Box Details</h4>
    <hr />
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ConsigneeId" />
                <input asp-for="ShipmentId" type="hidden" />
                <div class="form-group">
                    <label class="control-label">Tracking Number</label>
                    <input asp-for="TrackingNo" class="form-control" />
                    <span asp-validation-for="TrackingNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Shipper's Name</label>
                    <input asp-for="ShipersName" class="form-control" />
                    <span asp-validation-for="ShipersName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Contact Number</label>
                    <input asp-for="ShipersNo" class="form-control" />
                    <span asp-validation-for="ShipersNo" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label class="control-label">Quantity</label>
                <input asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>*@
                <div class="form-group">
                    <label class="control-label">Agent</label>
                    <input asp-for="AgentsName" class="form-control" />
                    <span asp-validation-for="AgentsName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Received at Warehouse</label>
                    <input asp-for="PickupDate" class="form-control" type="date" />
                    <span asp-validation-for="PickupDate" class="text-danger"></span>
                </div>
                <br />
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Consignee's Name</label>
                    <input asp-for="ConsigneesName" class="form-control" />
                    <span asp-validation-for="ConsigneesName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Address</label>
                    <input asp-for="ConsigneesAddr" class="form-control" />
                    <span asp-validation-for="ConsigneesAddr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Contact Number</label>
                    <input asp-for="ConsigneesNo" class="form-control" />
                    <span asp-validation-for="ConsigneesNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Barcode</label>
                    <input asp-for="Barcode" class="form-control" />
                    <span asp-validation-for="Barcode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Destination" class="control-label"></label>
                    <input asp-for="Destination" class="form-control" />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label class="control-label">Box Type</label>
                <select class="form-control" asp-for="BoxType">
                    <option value="">Select Box Type</option>
                    <option value="Regular">Regular</option>
                    <option value="Jumbo">Jumbo</option>
                    <option value="Irregular">Irregular</option>
                </select>
                </div>*@
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Number of Boxes</label>
                    <input asp-for="Qty" class="form-control" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegularQuantity" class="control-label"></label>
                    <input asp-for="RegularQuantity" class="form-control" />
                    <span asp-validation-for="RegularQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="JumboQuantity" class="control-label"></label>
                    <input asp-for="JumboQuantity" class="form-control" />
                    <span asp-validation-for="JumboQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IrregularQuantity" class="control-label"></label>
                    <input asp-for="IrregularQuantity" class="form-control" />
                    <span asp-validation-for="IrregularQuantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Others" class="control-label"></label>
                    <input asp-for="Others" class="form-control" />
                    <span asp-validation-for="Others" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpecifyOthers" class="control-label"></label>
                    <input asp-for="SpecifyOthers" type="text" />
                    <span asp-validation-for="SpecifyOthers" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                <label class="control-label">Box Type</label>
                <select class="form-control" asp-for="BoxType">
                    <option value="">Select Box Type</option>
                    <option value="Regular">Regular</option>
                    <option value="Jumbo">Jumbo</option>
                    <option value="Irregular">Irregular</option>
                </select>
                </div>*@
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-outline-success" />
                    <a class="btn btn-sm btn-outline-success" asp-controller="Consignees" asp-action="Index" asp-route-shipmentid="@Model.ShipmentId">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    input {
        border: 0;
        outline: 0;
        background: transparent;
        border-bottom: 1px solid black;
    }
</style>
