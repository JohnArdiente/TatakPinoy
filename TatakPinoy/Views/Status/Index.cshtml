@model IEnumerable<TatakPinoy.Models.Status>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <br />
    <p>
        <a asp-action="Create" class="btn btn-outline-success">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDesc)
                    </td>
                    <td>
                        <a asp-action="Edit"  class="btn btn-outline-primary" asp-route-id="@item.StatusId">Edit</a> 
                       
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.StatusId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
<style>
    .container-fluid {
        width: 80%;
    }
</style>
