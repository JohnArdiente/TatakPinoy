@model TatakPinoy.Models.Status

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h4>Edit Status</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StatusId" />
                <div class="form-group">
                    <label asp-for="StatusDesc" class="control-label"></label>
                    <input asp-for="StatusDesc" class="form-control" />
                    <span asp-validation-for="StatusDesc" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
                </div>
            </form>
        </div>
    </div>

  
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
