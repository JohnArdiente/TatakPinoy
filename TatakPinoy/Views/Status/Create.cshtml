@model TatakPinoy.Models.Status

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h4>Create Status</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StatusDesc" class="control-label">Status Description: </label>
                    <input asp-for="StatusDesc" class="form-control" />
                    <span asp-validation-for="StatusDesc" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-sm btn-outline-success" />
                    <a class="btn btn-sm btn-outline-success" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
